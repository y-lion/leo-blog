<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cloudleo.biz.mapper.ArticleTagMapper">

    <!-- 根据文章ID查询其关联的标签信息 -->
    <select id="findByArticleId" resultType="cn.cloudleo.biz.entity.SysTag">
        SELECT t.name
        FROM tb_article_tag at,
             tb_tag t
        WHERE at.article_id = #{articleId}
          AND t.id = at.tag_id;
    </select>

</mapper>
