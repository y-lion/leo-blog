<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cloudleo.biz.mapper.TagMapper">

    <select id="findByArticleId" parameterType="long" resultType="cn.cloudleo.biz.entity.SysTag">
        SELECT * FROM tb_tag t, tb_article a, tb_article_tag ta
        WHERE t.id = ta.tag_id AND a.id = ta.article_id AND a.id = #{id}
    </select>

</mapper>
